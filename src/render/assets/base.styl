@import './styles'
@import './styles/variable'
*
*::before
*::after
  box-sizing border-box
  user-select none
html
  font-size 16px
body
  margin 0 auto
  padding 0
  width 100%
  font-size 12px
  overflow hidden
p
  margin 0
  line-height 1.5
code
  margin 0 2px
  padding 2px 4px
  border-style solid
  border-width 1px
  border-radius 4px
  &.blue
    color $color-info
#app
  height 100vh
  -webkit-overflow-scrolling touch
  -webkit-font-smoothing antialiased

::-webkit-scrollbar
  width 6px 
  height 6px
::-webkit-scrollbar-thumb
  background-color #b8b8b8
  border-radius 4px
  &:hover
    background-color #999
